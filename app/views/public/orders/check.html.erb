<div class="container">
    
  <h2 class="mt-5 bg-light d-inline-block">注文情報確認</h2>
  
  <div class="row">
    <div class="col-md-6">
      <table cellpadding="13", class="table-bordered">
         <thead>
           <tr>
             <th>商品名</th>
             <th>単価(税込)</th>
             <th>数量</th>
             <th>小計</th>
           </tr>
         </thead>
        
         <tbody>
           <% @sum = 0 %>
           <% @cart_items.each do |cart_item| %>
             <tr>
               <td>
                 <%= image_tag cart_item.item.image, size: "56x40" %>
                 <%= cart_item.item.name %>
               </td>
               <td><%= cart_item.item.add_tax_price.to_s(:dalimited) %></td>
               <td><%= cart_item.amount %></td>
               <% @sum += cart_item.subtotal %>
               <td><%= @sum %></td>
             </tr>
           <% end %>
         </tbody>
       </table>
     </div>
      
     <div class="col-md-6">
       <table cellpadding="15", class="table-bordered">
         <tr>
           <th>送料</th>
           <td>800</td>
         </tr>
         <tr>
           <th>商品合計</th>
           <td><%= @sum %></td>
         </tr>
         <tr>
           <th>請求金額</th>
           <td><%= @sum + 800 %></td>
         </tr>
       </table>
     </div>
  </div>
</div>