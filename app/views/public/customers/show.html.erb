<div class="container text-center">
  <div class="text-left">
    <h2 class="mt-5 bg-light d-inline-block">マイページ</h2>
    
        
    <h3> 
    　登録情報
          
      <%= link_to customers_information_edit_path, class:"btn btn-success" do %>
        編集する
      <% end %>
    </h3>
    
    <table class="table table-caption">
      <tbody>
    　　<tr>
      　　<th>氏名</th>
      　　<td><%= @customer.first_name %> <%= @customer.last_name %></td>
    　　</tr>
    　　<tr>
      　　<th>カナ</th>
      　　<td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
    　　</tr>
    　　<tr>
      　　<th>郵便番号</th>
      　　<td><%= @customer.postal_code %></td>
    　　</tr>
    　　<tr>
      　　<th>住所</th>
      　　<td><%= @customer.address %></td>
    　　</tr>
    　　<tr>
      　　<th>電話番号</th>
      　　<td><%= @customer.telephone_number %></td>
    　　</tr>
    　　<tr>
      　　<th>メールアドレス</th>
      　　<td><%= @customer.email %></td>
    　　</tr>
  　　</tbody>
    </table>
    
    <h3>
      配送先
      
      <%= link_to root_path, class:"btn btn-primary" do %>
        一覧を見る
      <% end %>
    </h3>
    
    <h3>
      注文履歴
      
      <%= link_to root_path, class:"btn btn-primary" do  %>
        一覧を見る
      <% end %>
    </h3>
  </div>
</div>