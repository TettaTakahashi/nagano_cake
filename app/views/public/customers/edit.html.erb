<div class="container text-center">
  <div class="text-left">
      <h3 class="mt-5 bg-light d-inline-block">会員情報編集</h3>
      
      <%= form_with model: [:public, @customer] do |f| %>
        <h5 class="mt-4">氏名</h5>
        <%= f.text_field :first_name %> 
        <%= f.text_field :last_name %>
        
        <h5 class="mt-3">フリガナ</h5>
        <%= f.text_field :first_name_kana %>
        <%= f.text_field :last_name_kana %>
        
        <h5 class="mt-3">郵便番号</h5>
        <%= f.text_field :postal_code %>
        
        <h5 class="mt-3">住所</h5>
        <%= f.text_field :address %>
        
        <h5 class="mt-3">電話番号</h5>
        <%= f.text_field :telephone_number %>
        
        <h5 class="mt-3">メールアドレス</h5>
        <%= f.text_field :email %><br>
        
        <%= f.submit "編集内容を保存", class:"btn btn-success mt-4", style: "width: 300px;" %>
        <%= link_to public_customers_confirm_withdraw_path, class:"btn btn-danger mt-4 ml-5" do %>
        退会する
        <% end %>
      <% end %>
      
  </div>
</div>