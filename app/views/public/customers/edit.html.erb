<div class="container text-center">
  <div class="text-left">
      <h3 class="mt-5 bg-light d-inline-block">会員情報編集</h3>
      
      <%= form_with model:@customer, url:customers_information_path do |f| %>
        <table cellpadding="10">
          <tr><th>氏名</th><td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td></tr>
          <tr><th>フリガナ</th><td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td></tr>
          <tr><th>郵便番号</th><td><%= f.text_field :postal_code %></td></tr>
          <tr><th>住所</th><td><%= f.text_field :address %></td></tr>
          <tr><th>電話番号</th><td><%= f.text_field :telephone_number %></td></tr>
          <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
          <tr>
            <th></th>
            <td>
              <%= f.submit "編集内容を保存", class:"btn btn-success mt-4", style: "width: 300px;" %>
              <%= link_to customers_confirm_withdraw_path, class:"btn btn-danger mt-4 ml-5" do %>
                退会する
              <% end %>
            </td>
          </tr>
        </table>
      <% end %>
      
  </div>
</div>