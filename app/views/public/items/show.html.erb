<div class="container">
  
  <div class="d-flex mt-5">
    <%= image_tag @item.image, size: "280x200" %>
  
    <div class="ml-5">
      <h4 style="font-weight: bold;"><%= @item.name %></h4>
      
      <p class="mt-3"><%= @item.introduction %></p>
      
      <div class="d-flex mt-5">
        <h4>¥<%= @item.add_tax_price.to_s(:dalimited) %></h4>
        <p>(税込)</p>
        
        <div class="mt-4">
          <%= form_with model:@cart_item, url: cart_items_path, method: :post do |f| %>
            
            <%= f.select :amount, *[1..10] %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
            <!--<%#= f.hidden_field :cart_item, :value => "amount" %>-->
            
            <%= f.submit "カートに入れる", class:"btn btn-success mt-4" %>
          <% end %>
        </div>
      </div>
    </div>
  <div>
</div>