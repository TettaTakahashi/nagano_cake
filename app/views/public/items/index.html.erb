<div class="container">
  
  <div class="d-flex mt-5">
    <h2>商品一覧</h2>
    <h4>(全<%= @items.length %>件)</h4>
  </div>
  
  <div class="d-flex">
    <% @items.each do |item| %>
      <div class="mt-3 mr-3 d-flex flex-column">
        <%= link_to(root_path) do %>
  　　　　　<%= image_tag(item.image, size: "240x180") %>
　　　　<% end %>
        <%= item.name %><br>
        ¥<%= item.add_tax_price.to_s(:dalimited) %>
      </div>
    <% end %>
  </div>
</div>