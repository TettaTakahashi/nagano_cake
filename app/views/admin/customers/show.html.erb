<div class="container">
  
  <h2 class="mt-4 bg-light d-inline-block"><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
  
  <table cellpadding="15">
    <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
    <tr><th>氏名</th><td><%= @customer.first_name %> <%= @customer.last_name %></td></tr>
    <tr><th>フリガナ</th><td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td></tr>
    <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
    <tr><th>住所</th><td><%= @customer.address %></td></tr>
    <tr><th>電話番号</th><td><%= @customer.telephone_number %></td></tr>
    <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
    <tr>
      <th>
        会員ステータス
      </th>
      <td>
        <% if @customer.is_active %>
          有効
        <% else %>
        　退会済み
        <% end %>
      </td>
    </tr>
    <tr><th></th><td><%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success mr-5" %> <%= link_to "注文履歴一覧を見る", admin_path, class:"btn btn-primary" %></td></tr>
  </table>
</div>