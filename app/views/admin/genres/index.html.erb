<div class="container">
  <div>
      
    <h2 class="mt-5 mb-5 bg-light d-inline-block">ジャンル一覧・追加</h2>
    
    <%= form_with model:@genre, class:"row" do |f| %>
      <h5>ジャンル名</h5>
      <%= f.text_field :genre_name, class:"mx-5" %>
      <%= f.submit '新規登録', class:"btn btn-success" %>
    <% end %>
    
    
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= name %>
            </td>
            <td>
              <%= link_to "編集する", root_path, class:"btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>