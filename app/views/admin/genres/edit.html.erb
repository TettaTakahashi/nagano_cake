<div class="container">
    
    <h3 class="mt-3 mb-5 bg-light d-inline-block">ジャンル編集</h3>
    
    <%= form_with model:@genre, url:admin_genre_path(@genre) do |f| %>
      <table cellpadding="10">
        <tr><th>ジャンル名</th><td><%= f.text_field :name %><%= f.submit "変更を保存", class:"ml-5 btn btn-success" %></td></tr>
      </table>
    <% end %>
</div>