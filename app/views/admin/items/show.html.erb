<div class="container">
  
    <h3 class="mt-3 mb-5 bg-light d-inline-block">商品詳細</h3>
    
    <div class="d-flex">
      
      <%= image_tag @item.image,size: "280x200" %>
      
      <div class="ml-5">
        <table cellpadding="10">
            <tr><th>商品名</th><td><%= @item.name %></td></tr>
            <tr><th>商品説明</th><td><%= @item.introduction %></td></tr>
            <tr><th>ジャンル</th><td><%= @item.genre_id %></td></tr>
            <tr><th>税込価格(税抜価格)</th><td><%= @item.add_tax_price.to_s(:dalimited) %>(<%= @item.price.to_s(:dalimited) %>)円</td></tr>
            <tr>
              <th>
                販売ステータス
              </th>
              <td>
                <% if @item.is_active %>
                  販売中
                <% else %>
                　　販売停止中
                <% end %>
              </td>
            </tr>
        </table>
      
        <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success" %>
      </div>
    </div>
</div>