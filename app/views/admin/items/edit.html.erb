<div class="container d-flex">
  <div class="justify-content-center">
    
    <h3 class="mt-3 bg-light d-inline-block">商品編集</h3>
    
    <%= form_with model: @item, url:admin_item_path(@item) do |f| %>
     <table cellpadding="10">
       <tr><th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td></tr>
       <tr><th>商品名</th><td><%= f.text_field :name, placeholder: '商品名' %></td></tr>
       <tr><th>商品説明</th><td><%= f.text_area :introduction, placeholder: 'ここに説明文を記述します' %></td></tr>
       <tr><th>ジャンル</th><td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td></tr>
       <tr><th>税抜価格</th><td><%= f.text_field :price, placeholder: '1000' %>円</td></tr>
       <tr>
         <th>
           販売ステータス
         </th>
         <td>
           <%= f.radio_button :is_active, "true" %>
           <%= f.label :is_active_true, "販売中" %>
           <%= f.radio_button :is_active, "false" %>
           <%= f.label :is_active_false, "販売停止中" %>
         </td>
       </tr>
       <tr><th></th><td><%= f.submit '変更を保存', class:" btn btn-success" %></td></tr>
     </table>
    <% end %>
  </div>
</div>