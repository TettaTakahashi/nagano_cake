<div class="container d-flex">
  <div class="justify-content-center">
    
    <h3 class="mt-5 bg-light d-inline-block">商品新規登録</h3>
    
    <%= form_with model: @item do |f| %>
      <h5 class="field mt-5">商品画像</h5>
      <%= f.file_field :image, accept: "image/*" %>
      
      <h5 class="field mt-3">商品名</h5>
      <%= f.text_field :name, placeholder: '商品名' %>
      
      <h5 class="field mt-3">商品説明</h5>
      <%= f.text_area :introduction, placeholder: 'ここに説明文を記述します' %>
      
      <h5 class="field mt-3">ジャンル</h5>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_display) %>
      
      <h5 class="field mt-3">税抜価格</h5>
      <%= f.text_field :price, placeholder: '1000' %>円
      
      <h5 class="field mt-3">販売ステータス</h5>
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active_true, "販売中" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active_false, "販売停止中" %>
      <div class="actions mt-3">
        <%= f.submit '新規登録', class:" btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>