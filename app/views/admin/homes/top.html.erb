<div class="container">
  
  <h2 class="mt-5">注文履歴一覧</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to _path do %>
              <%= order.created_at.strftime('%y/%m/%d') %>
            <% end %>
          </td>
          <td>
            <%= order.address_name %>
          </td>
          <td>
            <%= order.amount %>
          </td>
          <td>
            <%= order.order_status %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>