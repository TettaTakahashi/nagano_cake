<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="flex-culumn vh-100">
    <header class="border-bottom">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
            <h1 class="navbar-brand">LOGO</h1>
            
            <div style="margin-left: 150px;">
              <%= flash[:notice] %>
            </div>
            
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
            <li>
              <%= link_to customers_my_page_path, class:"btn btn-outline-secondary" do %>
                マイページ
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to items_path, class:"btn btn-outline-secondary" do %>
                商品一覧
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to root_path, class:"btn btn-outline-secondary" do %>
                カート
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to destroy_customer_session_path, method: :delete, class:"btn btn-outline-secondary" do %>
                ログアウト
              <% end %>
            </li>
            <% elsif admin_signed_in?%>
            <li>
              <%= link_to admin_items_path, class:"btn btn-outline-secondary" do %>
                商品一覧
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to root_path, class:"btn btn-outline-secondary" do %>
                会員一覧
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to root_path, class:"btn btn-outline-secondary" do %>
                注文履歴一覧
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to admin_genres_path, class:"btn btn-outline-secondary" do %>
                ジャンル一覧
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class:"btn btn-outline-secondary" do %>
                ログアウト
              <% end %>
            </li>
            <% else %>
            <li>
              <%= link_to homes_about_path, class:"btn btn-outline-secondary" do %>
                About
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to items_path, class:"btn btn-outline-secondary" do %>
                商品一覧
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to new_customer_registration_path, class:"btn btn-outline-secondary" do %>
                新規登録
              <% end %>
            </li>
            &emsp;
            <li>
              <%= link_to new_customer_session_path, class:"btn btn-outline-secondary" do %>
                ログイン
              <% end %>
            </li>
            <% end %>
            </ul>
            
        </div>
      </nav>
    </header>
    
    <%= yield %>
    <footer></footer>
  </body>
</html>